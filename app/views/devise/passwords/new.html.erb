<ul class="nav nav-tabs" role="tablist">
<li role="presentation" class="active"><a href="#forgotpassword" aria-controls="signin" role="tab" data-toggle="tab">Forgot Password</a></li>
</ul>
<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="signin">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>

        <div class="form-group">
            <div class="col-xs-12">
              Please enter your email address and we will send you instructions to reset your password
            </div>
        </div>

        <%= devise_error_messages! %>



        <div class="form-group">
            <div class="col-xs-12">
                <%= f.email_field :email, autocomplete: "email", class: 'form-control email-filed', id: 'inputEmail3', placeholder: 'Email Address', required: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                <%= f.submit 'Reset Password', class: 'btn btn-default login-btn' %>
            </div>
        </div>
    <% end %>

</div>
<div class="forgot-footer">
<%= link_to "Back to Login Page", new_session_path(resource_name) %>
</div>
</div>
