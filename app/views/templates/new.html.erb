<div class="top-panel">
      <div class="container-fluid">
         <div class="row">
           <div class="col-xs-12 col-sm-6">
             <div class="page-title">Create Template</div>
         </div>
         <div class="col-xs-12 col-sm-6">
             <div class="page-breadcrumbs">
              <ul>
               <li><a href="#">Devices</a></li>
             <li>IOT Hub Scinap</li>
            </ul>
           </div>
         </div>
       </div>
      </div>
   </div>
   <div class="middle-container">
      <div class="container-fluid">
           <div class="row">
           <div class="col-xs-12 col-sm-12">
             <div class="panel-box">
               <div class="panel-head">
                <h2>Create Tempate</h2>
             </div>
              <div class="dc-management-form">
               <%= form_for(@template, html: {class: 'form-horizontal', multipart: true}) do |f| %>
                 <div class="form-group">
                 <div class="col-xs-12 col-sm-12 mb-xs-15">
                    <div class="row">
                        <div class="col-xs-12 col-sm-5 mb-xs-15">
                          <%= f.text_field :name, class: 'form-control', placeholder: "Tempate Name Here" %>
                      </div>
                      <div class="col-xs-12 col-sm-7">
                          <div class="file-upload cs-templete">
                         <div class="file-select">
                         <div class="file-select-name" id="noFile">JSON Name Here</div>
                         <%= f.hidden_field :json_name, id: 'json_name' %>
                         <%= f.file_field :hardware_json, id: "chooseFile" %>
                         <div class="file-select-button" id="fileName">Import JSON</div>
                         </div>
                       </div>
                      </div>
                    </div>
                 </div>
                 </div>

                 <div class="form-group">
                 <div class="col-xs-12 text-center">
                   <button type="submit" class="btn submit-btn-green"> Submit</button>
                 </div>
                 </div>
              <% end %>
              </div>
           </div>
         </div>
         <div class="col-xs-12 col-sm-12">
             <div class="panel-box">
               <div class="panel-head">
                <h2>Tempates</h2>
             </div>
             <div class="device-detail-table roundscroll">
                 <div class="table-responsive">
                   <table class="table table-striped fixed_headers two-column">
                   <thead>
                     <tr>
                       <th>Tempate Name</th>
                       <th></th>
                     </tr>
                   </thead>
                   <tbody style="height:175px;">
                     <% @templates.each do |t| %>
                     <tr>
                       <td><%= t.name %></td>
                       <td><a href><img src="../assets/edit-icon.svg" alt="edit"></a></td>
                     </tr>
                     <% end %>
                   </tbody>
                 </table>
               </div>

             </div>
           </div>
         </div>
       </div>
      </div>
   </div>
     <div class="clear"></div>
